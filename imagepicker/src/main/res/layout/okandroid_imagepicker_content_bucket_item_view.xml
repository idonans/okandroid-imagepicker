<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffffff">
    <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/bucket_cover"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView android:id="@+id/bucket_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/bucket_cover"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ff333333"
        android:textSize="16sp"
        tools:text="abc"/>
    <TextView android:id="@+id/bucket_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/bucket_name"
        android:gravity="center_vertical"
        android:textColor="#ff999999"
        android:textSize="16sp"
        tools:text="(100)"/>
</RelativeLayout>